# ================================================================================
# Fragrance AI - Production Environment Configuration
# ================================================================================
# CRITICAL: Copy this file to .env.production and set actual values
# SECURITY: Never commit the actual .env.production file to version control
# ================================================================================

# Database Configuration
POSTGRES_PASSWORD=your_super_secure_postgres_password_here
DATABASE_URL=postgresql://fragrance_ai:${POSTGRES_PASSWORD}@postgres:5432/fragrance_ai

# Cache Configuration
REDIS_PASSWORD=your_super_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Application Security
SECRET_KEY=your_super_secure_64_character_secret_key_for_jwt_tokens_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com","https://api.yourdomain.com"]

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
ENVIRONMENT=production

# Worker Configuration
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=120
KEEPALIVE=5

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# AI/ML Configuration
MODEL_CACHE_SIZE=10000
EMBEDDING_DIMENSION=768
MAX_CONTEXT_LENGTH=4096

# External Services
CHROMA_HOST=chroma
CHROMA_PORT=8001

# Optional: Weights & Biases (for model tracking)
WANDB_API_KEY=your_wandb_api_key_here

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Email Configuration (if used)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email_user
SMTP_PASSWORD=your_email_password
SMTP_TLS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.txt,.csv,.json

# Performance Settings
CONNECTION_POOL_SIZE=20
CONNECTION_POOL_MAX_OVERFLOW=30
STATEMENT_TIMEOUT=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# ================================================================================
# SECURITY CHECKLIST:
#
# 1. Generate strong, unique passwords for all services
# 2. Use a cryptographically secure SECRET_KEY (64+ characters)
# 3. Set proper CORS_ORIGINS for your domain
# 4. Enable SSL/TLS certificates
# 5. Configure firewall rules
# 6. Set up regular backups
# 7. Enable monitoring and alerting
# 8. Review and rotate secrets regularly
#
# ================================================================================