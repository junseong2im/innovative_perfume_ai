# Production Environment Configuration
APP_ENV=production

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
API_WORKERS=8
API_RELOAD=false

# Database (use secrets manager in real production)
DATABASE_URL=postgresql://fragrance_user:${DB_PASSWORD}@db-prod:5432/fragrance_prod

# Redis
REDIS_URL=redis://redis-prod:6379/0
REDIS_PORT=6379

# Workers
LLM_WORKER_CONCURRENCY=4
RL_WORKER_CONCURRENCY=2
USE_GPU=true

# Paths
CHECKPOINT_DIR=/app/checkpoints
TENSORBOARD_DIR=/app/tensorboard
LOG_DIR=/app/logs
DATA_DIR=/app/data

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json

# LLM Configuration Profile
LLM_CONFIG_PROFILE=production

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}

# Cache
USE_CACHE=true
CACHE_TTL=14400

# Production Features
DEBUG_MODE=false
HOT_RELOAD=false
PROFILING_ENABLED=false

# Performance
REQUEST_TIMEOUT=300
MAX_QUEUE_SIZE=500
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Security
CORS_ALLOWED_ORIGINS=https://app.fragrance-ai.com,https://api.fragrance-ai.com
API_KEY_REQUIRED=true
TLS_ENABLED=true

# High Availability
AUTO_SCALING=true
MIN_WORKERS=2
MAX_WORKERS=10
HEALTH_CHECK_INTERVAL=30
