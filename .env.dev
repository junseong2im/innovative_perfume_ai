# Development Environment Configuration
APP_ENV=development

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
API_WORKERS=2
API_RELOAD=true

# Database
DATABASE_URL=sqlite:///./data/fragrance_dev.db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# Workers
LLM_WORKER_CONCURRENCY=1
RL_WORKER_CONCURRENCY=1
USE_GPU=false

# Paths
CHECKPOINT_DIR=./checkpoints
TENSORBOARD_DIR=./tensorboard
LOG_DIR=./logs
DATA_DIR=./data

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# LLM Configuration Profile
LLM_CONFIG_PROFILE=development

# Monitoring
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Cache
USE_CACHE=true
CACHE_TTL=3600

# Development Features
DEBUG_MODE=true
HOT_RELOAD=true
PROFILING_ENABLED=true
